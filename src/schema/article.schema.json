{
  "$comment": "Copyright 2024 Blog Writer",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BlogWriterArticle",
  "type": "object",
  "required": ["version", "metadata", "content"],
  "properties": {
    "version": {"type": "string"},
    "metadata": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {"type": "string"},
        "author": {"type": "string"}
      },
      "additionalProperties": false
    },
    "content": {
      "type": "array",
      "items": {"$ref": "#/definitions/node"}
    }
  },
  "additionalProperties": false,
  "definitions": {
    "node": {
      "type": "object",
      "required": ["tag"],
      "properties": {
        "tag": {"type": "string"},
        "content": {
          "oneOf": [
            {"type": "string"},
            {"type": "array", "items": {"$ref": "#/definitions/node"}}
          ]
        },
        "url": {"type": "string"},
        "tex": {"type": "string"},
        "display": {"type": "boolean"}
      },
      "additionalProperties": false
    }
  }
}
